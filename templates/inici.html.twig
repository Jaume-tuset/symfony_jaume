{% extends "base.html.twig" %}
{% block title %} Inicio {% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  <link href="{{ asset('assets/css/estilsInici.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <h1 id="titolInici">Projecte Symfony Equips 2n DAW</h1>
    <div class="caja1">
        <p id="paragrafInici">Inici programa gestió d'equips i membres del proyecte 2n DAW 
        <br> IES LLuís Simarro <br> Curs 22/23 <br>
        <img class="imatgeInici" src=" {{ asset('assets/img/manosUnidas.jpeg') }} " /></p>
    </div>
    <h1 id="titol_llista_equips">Llistat d'equips</h1>
    <div class="caja1">
        <div id="llista_equips">
            <div id="paragrafSecundari"> 
                <img id="logo_avatar" src="{{ asset('assets/img/avatar.png')}}">
                <a href=" {{ path('nou_membre')}} ">Nou membre d'Equip</a>
            </div>
        {% if equips %}
            {% for eq in equips %}
                <div id="equipos">
                    <a href="{{ path('dades_equip')}}/{{eq.getId}}"> {{ eq.getNom }}(nota:{{eq.getNota}})
                    <a class="lapiz" href ="{{ path('editar_equip') }}/{{ eq.getId}}">
                        <img class="lapiz" src="{{ asset('assets/img/lapiz.jpeg') }}" />
                    </a>
                </div>
            {% endfor %}
        {% endif %}
        </p>
    </div>
{% endblock %}
