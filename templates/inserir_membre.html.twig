{% extends 'base.html.twig' %}
{% block title %}Equips {% endblock %}
{% block stylesheets %}
	<link href="{{ asset('assets/css/estilsInici.css') }}" rel="stylesheet">
{% endblock %}
{% block header %}
	{{ parent() }}
{% endblock %}
{% block body %}
    {% if error %}
		<body>
			<h1 id="titolInici">Projecte Symphony Equips 2n DAW </h1>
			<h2 id="titolSecundari">Error en la inserci√≥ de l'equip
				{{ membre.getNom }}
            </h2>
            <p id="paragrafInici">
				<img class="imatgeInici" src="{{ asset('assets/img/roger.jpeg') }}"/></br>
    			<div class="exception">{{ error }}</div>
           	</p>
             <p id="paragrafInici">
		        <a class="nav-link" href="{{ path('inici') }} ">Tornar a l'inici</a>
	        </p>
        </body>
    {% else %}
        <body>
            <h1 id="titolInici">Projecte Symphony Equips 2n DAW</h1>
	        <h2 id="titolSecundari">Membre {{ membre.getId }} amb nom {{ membre.getNom }} insertit correctament </h2>
	        <p id="paragrafInici">
		        <img class="imatgeInici" src="{{ asset('assets/img/hero.jpeg') }}"/>
	        </p>
	        <p id="paragrafInici">
                <img src="https://img.icons8.com/emoji/48/null/house-emoji.png" href="{{ path('inici') }}"/>
                <a href="{{ path('inici') }} ">Torna a l'inici</a>
            </p>
        </body>
    {% endif %}
{% endblock %}
